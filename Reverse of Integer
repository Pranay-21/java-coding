import java.util.Scanner;

public class Main{
      public static void main(String[] args){
            int num, rem = 0;
            Scanner sc = new Scanner(System.in);
            System.out.print("Enter any number: ");
            num = sc.nextInt();
            System.out.println("The reverse of the number is: ");
            while(num!=0){
                  rem = num%10;
                  num/=10;
                  System.out.print(rem);
            }
            
      }
}
