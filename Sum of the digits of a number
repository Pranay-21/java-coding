import java.util.Scanner;

public class Main{
      public static void main(String[] args){
            int num, res = 0, rem = 0;
            Scanner sc = new Scanner(System.in);
            System.out.print("Enter any number: ");
            num = sc.nextInt();
            System.out.println("The sum of the digits is: ");
            while(num!=0){
                  rem = num%10;
                  res+=rem;
                  num/=10;
            }
            System.out.println(res);
      }
}
